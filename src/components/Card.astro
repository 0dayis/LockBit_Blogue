---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
import { background_color } from './Colors.astro';
---

<li class="link-card">
	<div class="post-block">
		<div class="post-head">
			<div class="post-top-block">
				<div class="post-title-block">
					<div class="post-title">{title}</div>
					<div>
						<div class="post-banner">
							<div class="banner">Key Protected</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="post-block-body">
			<div class="post-block-text">
				{body}
			</div>
		</div>
	</div>
	<!-- <a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a> -->
</li>
<style define:vars={{ background_color }}>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > .post-block {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
	.post-block {
		cursor: pointer;
		/* display: flex; */
	}
	.post-head {
		background: --var(--background_color);
		padding: 8px;
		border-radius: 4px, 4px, 0, 0;
	}
	.post-title-block {
		margin 8px
	}
	.post-title {
		font-weight: bold;
		font-size: 1.5rem;
		/* font-size: 22px; */
		letter-spacing: 0.03em;
		overflow: hidden;
		text-align: center;
		/* color: #222222; */
		overflow: hidden;
	}
	.post-banner {
		background-color: var(--background_color);
		padding: 5px 10px;
		font-family: "Proxima Nova";
		font-style: normal;
		font-weight: 700;
		font-size: 13px;
		letter-spacing: 0.05em;
		border-radius: 5px;
	}
	.post-banner > .banner {
		max-width: 120px;
		margin: 0 auto;
		display: flex;
		justify-content: space-around;
		width: 100%;
	}
	.post-block-body {
		padding: 10px;
	}
	.post-block-text {
		font-weight: normal;
		font-size: 14px;
		overflow: hidden;
		height: 80px;
	}
</style>
